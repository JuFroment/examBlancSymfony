{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}


{% block body %}
    <div class="text-center my-5">
    <h1><i class="fa-solid fa-list"></i> Administration de la liste des employés</h1>
    </div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Photo</th>
                <th>Secteur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class=" my-3
            {% if user.secteur =='Direction' %}
                 table-danger border-3
            {% elseif user.secteur =='Comptabilité' %}
                table-primary border-3
            {% elseif user.secteur =='Informatique' %}
                table-warning border-3
            {% elseif user.secteur =='Recrutement' %}
                table-info border-3
                {% endif %}">
                <td class="align-middle">{{ user.nom }}</td>
                <td class="align-middle">{{ user.prenom }}</td>
                <td class="align-middle">{{ user.email }}</td>
                <td class="align-middle"><img src="{{ user.photo }}" alt="photo de l'employé" class="imgMiniature"> </td>
                <td class="align-middle">{{ user.secteur }}</td>
                <td class="align-middle">
                    <a href="{{ path('app_user_crud_show', {'id': user.id}) }}"><i class="fa-solid fa-lg text-black fa-eye me-3"></i></a>
                    <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}"><i class="fa-solid fa-lg text-black fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
